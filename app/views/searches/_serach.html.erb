<% if user_signed_in? %>
  <div class="bg-light py-2">
    <div class="container my-1">
      <div class="row">
        <div class="col-lg-9 col-md-12 col">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <div class="row">
              <div class="col-sm-6 pr-sm-0 mb-2">
                <%= f.text_field :word, class: "form-control" %>
              </div>
              <div class="col-4 col-sm-2 pr-0">
                <%= f.select :range, options_for_select([['ユーザー'], ['投稿']]), {}, { class: "form-control" } %>
              </div>
              <div class="col-4 col-sm-2 pr-0">
                <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), {}, { class: "form-control" } %>
              </div>
              <div class="col-4 col-sm-2">
                <%= f.submit "検索", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>