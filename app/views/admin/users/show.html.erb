<h1>ユーザー詳細</h1>

<div class="row">
  <div class="col-md-4">
    <table class="table">
      <tbody>
        <tr>
          <th width='30%'>id</th>
          <td><%= @user.id %>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %>
        </tr>
        <tr>
          <th>メール</th>
          <td style="word-break:break-all"><%= @user.email %>
        </tr>
      </tbody>
    </table>
    <%= link_to 'ユーザー削除', admin_user_path(@user),
                    method: :delete,
                    class: "btn btn-danger",
                    data: { confirm: "本当に削除しますか？" } %>
  </div>
  <div class="col-md-8">
    <%= render 'admin/comments/comments', comments: @comments %>
  </div>
</div>
